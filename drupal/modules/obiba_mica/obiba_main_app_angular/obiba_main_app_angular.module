function obiba_main_app_angular_menu() {
  $external_items = array();
  $external_items += obiba_angular_load_external_menus_definitions();

  foreach ($external_items as $key_item => $external_item) {
    $external_items[$key_item]['page callback'] = 'obiba_main_app_angular_main_page';
  }
  $items = array();

  $items['obiba-angular-app'] = array(
    'page callback' => 'obiba_main_app_angular_main_page',
    'access callback' => TRUE,
    //'page arguments' => array(2)
  );

  $items['obiba_main_app_angular/%/%'] = array(
    'page callback' => 'obiba_main_app_angular_get_angular_template',
    'access callback' => TRUE,
    'page arguments' => array(1, 2)
  );
  return $items + $external_items;
}

/**
 * Implements hook_library().
 */
function obiba_main_app_angular_library() {
  return obiba_main_app_angular_load_angular_library();
}

/**
 * Implements hook_library_alter().
 * Angular library compatible with Jquery 1.10
 *
 */
function obiba_main_app_angular_library_alter(&$javascript, $module) {
  if (($module == 'obiba_main_app_angular' || $module == 'system') && current_path() == 'obiba-angular-app') {
    $path = drupal_get_path('module', 'jquery_update');
    jquery_update_jquery_replace($javascript, NULL, $path, NULL, '1.10');
  }

}

/**
 * Implements hook_theme().
 */
function obiba_main_app_angular_theme($existing, $type, $theme, $path) {
  $path_theme = $path . '/templates';
  //load external AngularJs app to implement their template folder
  return array(
    'obiba_angular_main' => array(
      'template' => 'obiba_angular_main',
      'path' => $path_theme
    )
  );
}

/**
 * hook implementations to load the menus rooting of external angular js modules
 */

function obiba_angular_load_external_menus_definitions() {
  $external_items = array();
  foreach (module_implements('load_menus') as $module) {
    $external_items += module_invoke($module, 'load_menus');
  }
  return $external_items;
}

/**
 * hook implementation to load external angular app js
 */
function obiba_main_app_angular_load_external_app_js() {
  module_invoke_all('get_js');
}

/**
 * hook implementation to get external modules names to load
 */
function obiba_main_app_angular_load_ng_module() {
  $modules = array();
  foreach (module_implements('get_ng_module_to_load') as $module) {
    // Calling all modules implementing hook_hook_name and
    // Returning results than pushing them into the $result array:
    $modules[] = module_invoke($module, 'get_ng_module_to_load');
  }
  return $modules;
}

function obiba_main_app_angular_load_js_resources() {
  obiba_main_app_angular_load_libraires_resources('obiba_main_app_angular');
  $module_path = drupal_get_path('module', 'obiba_main_app_angular');
  $js = file_scan_directory($module_path . '/js/app', '/.*\.js$/', array('key' => 'name'));
  ksort($js);
  foreach ($js as $file_js) {
    drupal_add_js($file_js->uri, array('type' => 'file', 'scope' => 'footer'));
  }

  obiba_main_app_angular_load_external_app_js();
  global $user;
  // Add CSRF token required by restWS.
  $js_settings = array(
    'angularjsApp' => array(
      'modules' => obiba_main_app_angular_load_ng_module(),
      //  'restws_csrf_token' => drupal_get_token('restws'),
      'user' => $user
    )
  );

  drupal_add_js($js_settings, 'setting');
}

function obiba_main_app_angular_main_page() {
  obiba_main_app_angular_load_js_resources();
  return theme('obiba_angular_main');
}

function obiba_main_app_angular_get_angular_template($module, $angular_template) {
  print theme($angular_template);
}

