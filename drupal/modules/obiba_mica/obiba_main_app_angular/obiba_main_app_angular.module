function obiba_main_app_angular_load_libraires_resources($module_name) {
  if (drupal_get_library($module_name, 'angular-app')) {
    drupal_add_library($module_name, 'angular-app');
  }
  else {
    watchdog($module_name, 'The library angular-app not loaded', array(), WATCHDOG_WARNING);
  }
}
