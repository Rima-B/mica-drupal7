function obiba_mica_graphic_preprocess_block(&$variables) {
  if ($variables['block']->module == 'obiba_mica_graphic') {
    switch ($variables['block']->delta) {
      case NetworkStatistics::GEO_NBR_STAT:
      case NetworkStatistics::RECRUITMENT_SOURCES :
      case NetworkStatistics::METHODS_DESIGNS :
      case NetworkStatistics::BIO_SAMPLES :
      case NetworkStatistics::ACCESS :
        $variables['classes_array'][] = drupal_html_class(variable_get_value($variables['block']->delta . '_css'));
    }

  }
}

/**
 * Implements hook_block_view().
 */
function obiba_mica_graphic_block_view($delta = '') {
  $block = array();
  $aggregations_to_show = variable_get_value('graphics_blocks_aggregations');
  $block_delta_parameters = NetworkStatistics::deltaAggregationsMap();
  if ((!empty($aggregations_to_show) && $aggregations_to_show !== 'none')) {
    if ($delta == NetworkStatistics::GEO_NBR_STAT ||
      $delta == NetworkStatistics::RECRUITMENT_SOURCES ||
      $delta == NetworkStatistics::METHODS_DESIGNS ||
      $delta == NetworkStatistics::BIO_SAMPLES ||
      $delta == NetworkStatistics::ACCESS
    ) {
//      obiba_mica_graphic_geo_charts();
//      drupal_add_js(drupal_get_path('module', 'obiba_mica_graphic') . '/js/obiba-mica-graphic-get-studies-geoChart.js',
//        array('type' => 'file', 'scope' => 'footer', 'weight' => 100)
//      );
//
//      obiba_mica_graphic_table_pie_charts();
//      drupal_add_js(drupal_get_path('module', 'obiba_mica_graphic') . '/js/obiba-mica-graphic-get-pie-statistics-studies.js',
//        array('type' => 'file', 'scope' => 'footer', 'weight' => 100)
//      );

      obiba_mica_app_angular_load_js_resources('obiba_mica_graphic');
    }

    switch ($delta) {
      case NetworkStatistics::GEO_NBR_STAT:
        if (!empty($aggregations_to_show) && $aggregations_to_show !== 'none') {
          $display_countries_geo = in_array($block_delta_parameters[NetworkStatistics::GEO_NBR_STAT], $aggregations_to_show);
          if (!empty(variable_get_value('graphics_blocks')) && $display_countries_geo) {
            $block['subject'] = t('Distribution of studies by participants\' countries of residence');
//            $block['content'] = obiba_mica_graphic_get_geo_chart_studies(variable_get_value('graphics_blocks_networks'));
            $block['content'] = theme('obiba_mica_angular_app_geo_charts');
          }
        }
        return $block;
      case NetworkStatistics::RECRUITMENT_SOURCES:
        if (!empty($aggregations_to_show) && $aggregations_to_show !== 'none') {
          $display_recruitment = in_array($block_delta_parameters[NetworkStatistics::RECRUITMENT_SOURCES], $aggregations_to_show);
          if (!empty(variable_get_value('graphics_blocks')) && $display_recruitment) {
//            $block['content'] = obiba_mica_graphic_get_recruitment_source(variable_get_value('graphics_blocks_networks'));
          }
        }
        return $block;
      case NetworkStatistics::METHODS_DESIGNS:
        if (!empty($aggregations_to_show) && $aggregations_to_show !== 'none') {
          $display_design = in_array($block_delta_parameters[NetworkStatistics::METHODS_DESIGNS], $aggregations_to_show);
          if (!empty(variable_get_value('graphics_blocks')) && $display_design) {
//            $block['content'] = obiba_mica_graphic_get_method_design(variable_get_value('graphics_blocks_networks'));
            $block['content'] = theme('obiba_mica_angular_app_study_design_charts');
          }
        }
        return $block;
      case NetworkStatistics::BIO_SAMPLES:
        if (!empty($aggregations_to_show) && $aggregations_to_show !== 'none') {
          $display_bio_samples = in_array($block_delta_parameters[NetworkStatistics::BIO_SAMPLES], $aggregations_to_show);
          if (!empty(variable_get_value('graphics_blocks')) && $display_bio_samples) {
            $block['content'] = obiba_mica_graphic_get_bio_samples(variable_get_value('graphics_blocks_networks'));
          }
        }
        return $block;
      case NetworkStatistics::ACCESS:
        if (!empty($aggregations_to_show) && $aggregations_to_show !== 'none') {
          $display_access = in_array($block_delta_parameters[NetworkStatistics::ACCESS], $aggregations_to_show);
          if (!empty(variable_get_value('graphics_blocks')) && $display_access) {
            $block['content'] = obiba_mica_graphic_get_access(variable_get_value('graphics_blocks_networks'));
          }
        }
        return $block;
    }

  }
}

